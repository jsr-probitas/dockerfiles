[private]
default:
    @just --list

# Run linter
lint:
    golangci-lint run ./...

# Run tests
test:
    go test -v ./...

# Build binary
build:
    go build -o echo-http .

# Run server locally
run:
    go run .

# Format code
fmt:
    go fmt ./...
    goimports -w .

# Clean build artifacts
clean:
    rm -f echo-http

# Tidy dependencies
tidy:
    go mod tidy
